<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:id="@+id/landmarkCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMagpieWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/landmarkImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:src="@drawable/magpie_test_cardview_collectionimage" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/landmarkSponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_light"
                android:gravity="right|top"
                android:text="Author Name"
                android:textColor="@color/colorMagpieLightGray"
                android:textSize="12sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/landmarkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/landmarkSponsor"
                android:fontFamily="@font/montserrat_light"
                android:gravity="left|center"
                android:maxLines="2"
                android:text="Landmark"
                android:textColor="@color/colorMagpieBlack"
                android:textSize="20sp"
                android:typeface="sans" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/minutesconatiner">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/clock"
                    android:id="@+id/clock"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/landmarkTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textSize="12sp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="right|top"
                    android:layout_toRightOf="@+id/clock"/>

                <TextView
                    android:id="@+id/minutestext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/landmarkTime"
                    android:fontFamily="@font/font_awesome"
                    android:gravity="left|top"
                    android:text="MINUTES"
                    android:textColor="@color/colorMagpieLightGray"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/minutesconatiner"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/map_pin"
                    android:id="@+id/mappin"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/landmarkMiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".84"
                    android:textSize="12sp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="right|top"
                    android:layout_toRightOf="@+id/mappin"/>

                <TextView
                    android:id="@+id/milestext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/landmarkMiles"
                    android:fontFamily="@font/font_awesome"
                    android:gravity="left|top"
                    android:text="MILES"
                    android:textColor="@color/colorMagpieLightGray"
                    android:textSize="12sp" />

            </RelativeLayout>
        </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>