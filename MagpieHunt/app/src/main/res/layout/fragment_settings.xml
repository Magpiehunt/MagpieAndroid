<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:id="@+id/privacy_policy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/border_set_bottom"
    android:padding="13dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIVACY POLICY"
        android:textColor="@color/colorMagpieDarkGray"
        android:textSize="14sp" />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/terms_and_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_set_bottom"
        android:padding="13dp"
        android:layout_below="@+id/privacy_policy">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TERMS_AND_CONDITION"
            android:textColor="@color/colorMagpieDarkGray"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_set_bottom"
        android:padding="13dp"
        android:layout_below="@+id/terms_and_conditions">

        <TextView
            android:id="@+id/title_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHONE"
            android:textColor="@color/colorMagpieDarkGray"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/title_phone"
            android:layout_marginLeft="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow Camera"/>
                <CheckBox
                    android:id="@+id/cb_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"
                    android:layout_alignParentRight="true"
                    android:buttonTint="@color/colorMagpieGreen"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow GPS Location"/>
                <CheckBox
                    android:id="@+id/cb_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"
                    android:layout_alignParentRight="true"
                    android:buttonTint="@color/colorMagpieGreen"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow Push Notifications"/>
                <CheckBox
                    android:id="@+id/cb_push_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-4dp"
                    android:buttonTint="@color/colorMagpieGreen"/>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/phone"
        android:background="@drawable/border_set_bottom"
        android:padding="13dp">

        <TextView
            android:id="@+id/title_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCOUNT"
            android:textColor="@color/colorMagpieDarkGray"
            android:textSize="14sp" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/account_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/title_account"
            android:layout_marginLeft="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Google Sign-In:"/>
                <TextView
                    android:id="@+id/txt_gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:text="crazybird09@gmail.com"/>


            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_signout"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@+id/account_options"
            android:layout_centerHorizontal="true"
            android:background="@drawable/standard_button"
            android:text="SIGN OUT"
            android:textColor="@color/colorMagpieDarkGray" />
    </RelativeLayout>

</RelativeLayout>