<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/colorMagpieWhite">

    <LinearLayout
        android:id="@+id/prize_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_set_bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_super_badge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:src="@drawable/magpie_test_cardview_collectionimage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/tvAbbreviation_prize"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="2"
                android:fontFamily="@font/montserrat_extralight"
                android:gravity="left"
                android:text="TFN"
                android:textColor="@color/colorMagpieBlack"
                android:textSize="35sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tvTitle_prize"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_thin"
                android:gravity="left"
                android:text="Testing Full Name"
                android:textColor="@color/colorMagpieLightGray"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="NEW!"
            android:textColor="@color/colorMagpieGreen"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>