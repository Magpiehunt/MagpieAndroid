<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_info_bubble"
    android:padding="10dp">
    <ImageView
        android:id="@+id/img_grayx"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/deletehunt"/>
    <TextView
        android:id="@+id/txt_deletehunt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_grayx"
        android:text="Delete Hunt?"
        android:textColor="@color/colorMagpieBlack"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/txt_warning"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_deletehunt"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="0dp"
        android:layout_centerHorizontal="true"
        android:text="Are you sure you want to delete the Thomas Hammer Coffee Blitz hunt?"
        android:textColor="@color/colorMagpieDarkGray"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/txt_warning"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:weightSum="3"
        >

        <Button
            android:id="@+id/btn_no"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="CANCEL"
            android:textColor="@color/colorMagpieDarkGray"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button_filled"
            android:text="YES, DELETE IT!"
            android:textColor="@color/colorMagpieWhite"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>