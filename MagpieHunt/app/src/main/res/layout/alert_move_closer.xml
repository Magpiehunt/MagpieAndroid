<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <ImageView
        android:id="@+id/img_badge"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/example_super_badge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_move_closer"
        android:layout_width="197dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/img_badge"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/move_closer"
        android:textColor="@color/colorMagpieWhite"
        android:minLines="2"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_okay"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_move_closer"
        android:background="@drawable/add_collections_button_bg"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="@string/okay" />




</RelativeLayout>